

<div class="left-column">

	<h1> <%= @party.title %> @ <%=@party.address%></h1>
	<h3> <%= @party.date.to_s(:date) %></h3>
	<h3> <%= pluralize @party.reputation_for(:votes).to_i, "vote" %></h3>
	 <%= image_tag @party.main_image %>

	 <h3> Description </h3>
	<p> <%=@party.description %></p>
	<p> <%=@party.id %></p>

	<h3> Geocode </h3>
	<p> <%=@party.latitude %></p>
	<p> <%=@party.longitude %></p>


</div>

<!-- JOAQUIN, MOVE TO 3 COLUMN FORMAT FOR COMMENTING? -->

<div class="right-column">
	<div class="map">
		<%= render :partial => 'comments/form', :locals => {:party => @party} %>
	</div>
</div>


<%= link_to 'Edit', edit_party_path(@party) %> |
<%= link_to 'Back', parties_path %>


<div class ="comments"> 
    <% @party.comments.each do |comment| %>
        <%= render comment %>
    <% end %>
</div>

<div class ="images">
    <% @party.images.each do |image| %>
        <%= render image %>
    <% end %>
</div>



<%= render :partial => 'images/form', :locals => {:party => @party} %>
